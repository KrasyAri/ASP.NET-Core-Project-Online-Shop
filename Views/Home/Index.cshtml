@model IndexViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <p>The world of beauty</p>
</div>

<div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner ">
        <div class="carousel-item active">
            <img class="mx-auto d-block" src="~/Banners/biodroga-banner.jpg" />
        </div>
        <div class="carousel-item">
            <img class="ms-auto d-block w-75 " src="~/Banners/biodroga_MD_Banner.jpg" />
        </div>
        <div class="carousel-item">
            <img class="ms-auto d-block w-75" src="~/Banners/page-banner-about.jpg" />
        </div>
    </div>
</div>

<div class="mb-5"></div>

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        @if (!Model.Products.Any())
        {
            <p class="lead">There are no Products in the system currently available!</p>
        }
        else
        {
            @for (int i = 0; i < Model.Products.Count; i++)
            {
                var product = Model.Products[i];
                <div class="carousel-item @(i == 0 ? "active" : string.Empty)">
                    <img class="d-block w-25" src="@product.ImageUrl" alt="@product.Name @product.Series.ToString()">
                    <div class="carousel-caption d-none d-sm-block">
                        <h3><a class="btn btn-danger btn-sm" asp-controller="Products" asp-action="Details" asp-route-id="@product.Id">@product.Name Price: @product.Price BGN Series: @product.Series.ToString()</a></h3>
                    </div>
                </div>
            }
        }
    </div>
</div>